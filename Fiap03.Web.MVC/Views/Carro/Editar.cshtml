@model Fiap03.Web.MVC.Models.CarroModel

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(c => c.Marca)
        @Html.DropDownListFor(c => c.Marca,
            ViewBag.marcas as SelectList,
            "Selecione",
            new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Combustivel)
        @Html.EnumDropDownListFor(c => c.Combustivel,
            "Selecione",
            new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Ano)
        @Html.TextBoxFor(c => c.Ano, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(carro => carro.Placa)
        @Html.TextBoxFor(c => c.Placa,
            new { placeholder = "Digite a placa",
                  @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(c => c.Esportivo)
        @Html.LabelFor(c => c.Esportivo)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Descricao)
        @Html.TextAreaFor(c => c.Descricao, new { @class = "form-control" })
    </div>
    @Fabrica.Botao("Editar")
    @Html.ActionLink("Cancelar","Listar",
        null, new { @class = "btn btn-default"})
}
